<dl>
  <dt><%= Product.human_attribute_name(:name) %></dt>
  <dd><%= @product.name %></dd>
  <dt><%= Product.human_attribute_name(:description) %></dt>
  <dd><%= @product.description %></dd>
  <dt><%= Product.human_attribute_name(:min_price) %></dt>
  <dd><%= number_to_currency @product.min_price %></dd>
