<%= form_with url: search_enrollments_path, method: :get, local: true, html: { class: 'form-inline mt-4' } do |f| %>
  <div class="form-group">
    <%= f.label :q, 'Busca de matrículas', class: 'mx-2' %>
    <%= f.text_field :q, class: 'form-control mx-2' %>
  </div>
  <%= f.submit 'Buscar', class: 'btn btn-primary' %>
<% end %>

<% if @enrollments.empty? %>
  <h3 class="my-3">Não há matriculas cadastradas.</h3>
<% end %>
<ul>
  <% @enrollments.each do |enrollment| %>
    <li>
      <%= link_to enrollment.customer_name, subsidiary_enrollment_path(enrollment.subsidiary.id, enrollment.id) %>
      <%= enrollment.token %>
      <%= enrollment.customer_cpf %>
    </li>
  <% end %>
</ul>
