<%= link_to 'Home', root_path %>
<%= link_to 'Voltar', enrollments_path %>

<dl>
  <dt><%= Enrollment.human_attribute_name(:name) %></dt>
  <dd><%= @enrollment.customer_name %></dd>
  <dt><%= Enrollment.human_attribute_name(:cpf) %></dt>
  <dd><%= @enrollment.customer_cpf %></dd>
  <dt><%= Enrollment.human_attribute_name(:valid_thru) %></dt>
  <dd><%= @enrollment.valid_thru %></dd>
  <dt><%= Enrollment.human_attribute_name(:token) %></dt>
  <dd><%= @enrollment.token %></dd>
  <dt><%= Enrollment.human_attribute_name(:status) %></dt>
  <dd><%= Enrollment.human_attribute_name("status.#{@enrollment.status}") %></dd>
  <dt><%= Enrollment.human_attribute_name(:plan) %></dt>
  <dd><%= @enrollment.subsidiary_plan.plan.name %></dd>
  <dt><%= Enrollment.human_attribute_name(:email) %></dt>
  <dd><%= @enrollment.email %></dd>
  <dt><%= Enrollment.human_attribute_name(:price) %></dt>
  <dd><%= number_to_currency @enrollment.price %></dd>
</dl>

<% if @enrollment.active? %>
  <%= link_to 'Cancelar matrícula', cancel_enrollment_path(@enrollment), method: :patch,
                                    data: { confirm: "Deseja cancelar a matrícula #{@enrollment.token} ?" } %>
<% end %>
<%= link_to 'Banir cliente', new_enrollment_banned_customer_path(@enrollment) %>
